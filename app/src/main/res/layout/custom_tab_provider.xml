<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/custom_tab_icon"
        android:layout_gravity="center_horizontal"
        android:layout_width="82dp"
        android:layout_height="64dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/custom_tab_text"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/underline"
        android:textSize="10sp"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:layout_alignBottom="@+id/custom_tab_icon"
        android:layout_alignRight="@+id/custom_tab_icon"
        android:layout_alignEnd="@+id/custom_tab_icon"
        android:layout_marginBottom="18dp"/>

</RelativeLayout>